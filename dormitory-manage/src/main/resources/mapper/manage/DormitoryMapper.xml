<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.DormitoryMapper">

    <resultMap type="Dormitory" id="DormitoryResult">
        <result property="id" column="id"/>
        <result property="buildingId" column="building_id"/>
        <result property="name" column="name"/>
        <result property="peopleNumberLimit" column="people_number_limit"/>
        <result property="peopleNumber" column="people_number"/>
        <result property="remark" column="remark"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectDormitoryVo">
        select id,
               building_id,
               name,
               people_number_limit,
               people_number,
               remark,
               user_id,
               create_time,
               update_time
        from tb_dormitory
    </sql>

    <select id="selectDormitoryList" parameterType="Dormitory" resultMap="DormitoryResult">
        <include refid="selectDormitoryVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="buildingId != null ">and building_id = #{buildingId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectDormitoryById" parameterType="Long" resultMap="DormitoryResult">
        <include refid="selectDormitoryVo"/>
        where id = #{id}
    </select>

    <insert id="insertDormitory" parameterType="Dormitory" useGeneratedKeys="true" keyProperty="id">
        insert into tb_dormitory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="buildingId != null">building_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="peopleNumberLimit != null">people_number_limit,</if>
            <if test="peopleNumber != null">people_number,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="buildingId != null">#{buildingId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="peopleNumberLimit != null">#{peopleNumberLimit},</if>
            <if test="peopleNumber != null">#{peopleNumber},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateDormitory" parameterType="Dormitory">
        update tb_dormitory
        <trim prefix="SET" suffixOverrides=",">
            <if test="buildingId != null">building_id = #{buildingId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="peopleNumberLimit != null">people_number_limit = #{peopleNumberLimit},</if>
            <if test="peopleNumber != null">people_number = #{peopleNumber},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDormitoryById" parameterType="Long">
        delete
        from tb_dormitory
        where id = #{id}
    </delete>

    <delete id="deleteDormitoryByIds" parameterType="String">
        delete from tb_dormitory where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
